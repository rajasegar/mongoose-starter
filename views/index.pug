doctype html
html(lang="en")
  head
    title Meow meow
    script(src="https://unpkg.com/htmx.org@1.3.1")
    script(src="https://unpkg.com/hyperscript.org@0.0.5")
  body
    h1 Meow world
    ul#catlist
      each cat in cats
        include includes/cat.pug
    form(hx-post="/cats", hx-target="#catlist", hx-swap="beforeend", _="on htmx:afterOnLoad set #txtName.value to ''")
      p
        input#txtName(type="text", name="name")
        button(type="submit") Add Cat
